config CPU_HOST 
  bool "host cpu"

config CPU 
  def_string "host" if CPU_HOST 
  depends on CPU_HOST 

if CPU_HOST 
  choice CHOICE_CPU_ARCHITECTURE
    default CPU_ARCHITECTURE_HOST
  endchoice
endif 
